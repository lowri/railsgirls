
<%= form_for(post) do |f| %>
<% if post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-md-4">

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="col-md-4">

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="col-md-4">

    <div class="field">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
    </div>
  </div>
</div>

  <hr>

<div class="row">
  <div class="col-md-12 text-center">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</div>
<% end %>
